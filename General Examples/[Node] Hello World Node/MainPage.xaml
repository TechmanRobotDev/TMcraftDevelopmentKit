<UserControl x:Class="HelloWorldNode.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloWorldNode"
             mc:Ignorable="d" 
             d:DesignHeight="450" FontSize="48" Loaded="UserControl_Loaded" Width="729">
    <Grid x:Name="grid_Main" Background="#CCCFF48E">
        <Label Content="Type your content here" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI Light" Foreground="#FF3A580F" />
        <TextBox x:Name="TextB_Main" HorizontalAlignment="Center" Margin="0,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="644" Height="290" AcceptsReturn="True"/>
        <Button x:Name="Btn_Save" Content="Save" HorizontalAlignment="Left" Margin="524,395,0,0" VerticalAlignment="Top" Height="42" Width="162" FontSize="24
                " Click="Btn_Save_Click" FontFamily="Microsoft YaHei UI Light">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
